static void displayColorText(char color, string str)
        {
            //MAXIMUM of 16 characters
            //should use 16 characters for full screen

                switch (color)
                {
                    case 'g':
                        Console.BackgroundColor = ConsoleColor.Green;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));// + i * ((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'G':
                        Console.ForegroundColor = ConsoleColor.DarkGreen;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'b':
                        Console.ForegroundColor = ConsoleColor.Blue;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'B':
                        Console.ForegroundColor = ConsoleColor.DarkBlue;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'y':
                        Console.ForegroundColor = ConsoleColor.Yellow;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'Y':
                        Console.ForegroundColor = ConsoleColor.DarkYellow;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'r':
                        Console.ForegroundColor = ConsoleColor.Red;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'R':
                        Console.ForegroundColor = ConsoleColor.DarkRed;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'k':
                        Console.BackgroundColor = ConsoleColor.Black;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'e':
                        Console.ForegroundColor = ConsoleColor.Gray;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'E':
                        Console.ForegroundColor = ConsoleColor.DarkGray;
                        Console.Write(str.PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;

                }

        }
