        static void displayColors(string colorString)
        {
            //MAXIMUM of 16 characters
            //should use 16 characters for full screen
            for(int i = 0; i < colorString.Length; i++)
            switch (colorString[i])
            {
                    case 'g':
                        Console.BackgroundColor = ConsoleColor.Green;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));// + i * ((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'G':
                        Console.BackgroundColor = ConsoleColor.DarkGreen;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'b':
                        Console.BackgroundColor = ConsoleColor.Blue;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'B':
                        Console.BackgroundColor = ConsoleColor.DarkBlue;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'y':
                        Console.BackgroundColor = ConsoleColor.Yellow;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'Y':
                        Console.BackgroundColor = ConsoleColor.DarkYellow;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'r':
                        Console.BackgroundColor = ConsoleColor.Red;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'R':
                        Console.BackgroundColor = ConsoleColor.DarkRed;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'k':
                        Console.BackgroundColor = ConsoleColor.Black;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'e':
                        Console.BackgroundColor = ConsoleColor.Gray;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;
                    case 'E':
                        Console.BackgroundColor = ConsoleColor.DarkGray;
                        Console.Write("".PadRight(((Console.WindowWidth - 1) / 20)));
                        // Reset the color.
                        Console.ResetColor();
                        break;

                }

        }
